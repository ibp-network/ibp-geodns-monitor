[Unit]
Description=IBP DNS

[Service]
ExecStart=/opt/ibp-geodns/bin/IBPDns -config /opt/ibp-geodns/config/ibpdns.json
WorkingDirectory=/opt/ibp-geodns
User=ibp
Group=ibp
Restart=always
RestartSec=5
Environment=PATH=/usr/bin:/usr/local/bin:/usr/sbin:/usr/local/sbin:/usr/local/go/bin/
Environment=GO_ENV=production

[Install]
WantedBy=multi-user.target