[Unit]
Description=IBP Monitor
After=ibpdns.service

[Service]
ExecStart=/opt/ibp-geodns/bin/IBPMonitor -config /opt/ibp-geodns/config/ibpmonitor.json
WorkingDirectory=/opt/ibp-geodns
User=ibp
Group=ibp
Restart=always
RestartSec=5
Environment=PATH=/usr/bin:/usr/local/bin:/usr/sbin:/usr/local/sbin:/usr/local/go/bin/
Environment=GO_ENV=production

[Install]
WantedBy=multi-user.target