{
    "System": {
        "WorkDir": "/opt/ibp-geodns-monitor/",
        "LogLevel": "Debug",
        "ConfigUrls": {
            "StaticDNSConfig": "https://raw.githubusercontent.com/ibp-network/config/refs/heads/main/geodns-static.json",
            "MembersConfig": "https://raw.githubusercontent.com/ibp-network/config/refs/heads/main/members_professional.json",
            "ServicesConfig": "https://raw.githubusercontent.com/ibp-network/config/refs/heads/main/services_rpc.json",
            "IaasPricingConfig": "https://raw.githubusercontent.com/ibp-network/config/refs/heads/main/services_rpc_iaaspricing.json",
            "ServicesRequestsConfig": "https://raw.githubusercontent.com/ibp-network/config/refs/heads/main/services_rpc_requests.json"
        },
        "ConfigReloadTime": 3600,
        "MinimumOfflineTime": 900
    },
    "Nats": {
        "NodeID": "natsuser",
        "Url": "nats://127.0.0.1:4222",
        "User": "natsuser",
        "Pass": "natspasswd"
    },
    "Mysql": {
        "Host": "localhost",
        "Port": "3306",
        "User": "monitor",
        "Pass": "dbpasswd",
        "DB": "monitor"
    },
    "Maxmind": {
        "MaxmindDBPath": "/opt/ibp-geodns-monitor/tmp/maxmind/",
        "AccountID": "12345",
        "LicenseKey": "licensekey"
    },
    "MonitorApi": {
        "ListenAddress": "0.0.0.0",
        "ListenPort": "6101"
    },
    "DnsApi": {
        "ListenAddress": "0.0.0.0",
        "ListenPort": "6100",
        "MonitorAddress": "127.0.0.1",
        "MonitorPort": "6101",
        "RefreshIntervalSeconds": 30
    },
    "CheckWorkers": {
        "numWorkers": 100,
        "separationInterval": 100
    },
    "Checks": [
        {
            "Name": "ping",
            "Enabled": 0,
            "CheckType": "site",
            "Timeout": 30,
            "minimumInterval": 60,
            "ExtraOptions": {"PingCount": 15, "PingInterval": 100, "PingTimeout": 1600, "PingTTL": 254, "PingSize": 28, "MaxPacketLoss": 25, "MaxLatency": 800}
        },
        {
            "Name": "ssl",
            "Enabled": 0,
            "CheckType": "domain",
            "Timeout": 90,
            "minimumInterval": 300,
            "ExtraOptions": {"ConnectTimeout": 10}
        },
        {
            "Name": "wss",
            "Enabled": 1,
            "CheckType": "endpoint",
            "Timeout": 90,
            "minimumInterval": 300,
            "ExtraOptions": {"ConnectTimeout": 10}
        },
        {
            "Name": "ethrpc",
            "Enabled": 0,
            "CheckType": "endpoint",
            "Timeout": 30,
            "minimumInterval": 300,
            "ExtraOptions": {"ConnectTimeout": 10}
        }
    ]
}